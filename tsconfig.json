{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@dandori/*": ["./packages/*/src"]
    },
    "types": ["node"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "packages/**/node_modules",
    "packages/**/dist",
    "packages/**/*.test.ts"
  ]
}